{
    "manifest_version": 2,
    "name": "Chemhover",
    "description": "Identifies SMILES and enables hover to see structure",
    "homepage_url": "https://github.com/whitead/chemhover",
    "version": "0.2",
    "icons": {
        "48": "icons/icon.png"
    },
    "background": {
        "scripts": [
            "background.js",
            "replace.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "48": "icons/icon-disable.png"
        },
        "default_title": "Enable chemhover"
    },
    "permissions": [
        "<all_urls>",
        "webRequest",
        "webNavigation",
        "activeTab",
        "storage"
    ]
}